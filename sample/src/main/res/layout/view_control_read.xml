<?xml version="1.0" encoding="utf-8"?>
<io.geeny.sample.ui.main.clients.ble.characterstics.views.operatorviews.ResourceReadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/card_view_geent_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Read"
            android:textColor="#000000"
            android:textSize="11dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="#444444" />

        <TextView
            android:id="@+id/buttonCharRead"
            style="@style/GeenyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Trigger" />
    </LinearLayout>
</io.geeny.sample.ui.main.clients.ble.characterstics.views.operatorviews.ResourceReadView>