<?xml version="1.0" encoding="utf-8"?>
<io.geeny.sample.ui.main.clients.ble.detail.general.view.GattServiceView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/card_view_geent_radius"
    app:cardBackgroundColor="@color/cardview_light_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewServiceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:textSize="16dp"
            android:background="@color/colorAccent2"
            android:ellipsize="marquee"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/containerGattServiceChar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</io.geeny.sample.ui.main.clients.ble.detail.general.view.GattServiceView>