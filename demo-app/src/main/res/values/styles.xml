<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="GeenyButton">
        <item name="android:background">@drawable/geeny_button</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@drawable/geeny_button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GeenySelector">
        <item name="android:background">@drawable/geeny_selector</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@drawable/geeny_selector_text</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="TitleTextStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>
