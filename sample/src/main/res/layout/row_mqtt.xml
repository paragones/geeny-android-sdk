<?xml version="1.0" encoding="utf-8"?>
<io.geeny.sample.ui.main.clients.mqtt.list.MqttClientListRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:contentPadding="16dp">


    <TextView
        android:id="@+id/textViewConnectionStatusMqtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="9dp"
        android:textColor="@color/primary_text_color"
        android:layout_gravity="end|top" />


    <TextView
        android:id="@+id/textViewHasCertificateLoadedRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no certificate loaded yet"
        android:textStyle="italic"
        android:textSize="9dp"
        android:layout_gravity="end|bottom"
        android:textColor="@color/primary_text_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="32dp">

        <TextView
            android:id="@+id/textViewMqttClientId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:ellipsize="marquee"
            android:textColor="@color/primary_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMqttServerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textColor="@color/primary_text_color"
            android:textSize="14dp" />


    </LinearLayout>
</io.geeny.sample.ui.main.clients.mqtt.list.MqttClientListRow>