<?xml version="1.0" encoding="utf-8"?>
<io.geeny.sample.ui.main.routing.router.list.RouteView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/card_view_geent_radius">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledViewRouteFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="From" />

        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledViewRouteTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="To" />


        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledViewRouteType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Type" />


        <io.geeny.sample.ui.common.views.StartStopButton
            android:id="@+id/buttonRouteStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
    </LinearLayout>

</io.geeny.sample.ui.main.routing.router.list.RouteView>