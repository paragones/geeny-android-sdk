<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/containerGeenyFlow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <io.geeny.sample.ui.common.views.LabeledTextView
        android:id="@+id/labeledGeenyBleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:label="Name" />

    <io.geeny.sample.ui.common.views.LabeledTextView
        android:id="@+id/labeledGeenyBleProtocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="Protocol" />

    <io.geeny.sample.ui.common.views.LabeledTextView
        android:id="@+id/labeledGeenyBleSerialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="Serialno" />

    <io.geeny.sample.ui.common.views.LabeledTextView
        android:id="@+id/labeledGeenyBleThingType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="ThingTypeId" />


    <LinearLayout
        android:id="@+id/containerRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">


        <ProgressBar
            android:id="@+id/progressBarRegister"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/buttonGeenyBleRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            style="@style/GeenyButton"  />

    </LinearLayout>
</LinearLayout>