<?xml version="1.0" encoding="utf-8"?>
<io.geeny.sample.ui.main.routing.router.list.RouteView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/card_view_geent_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledTextViewTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Topic" />


        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledTextViewTopicConsumer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Consumer" />

        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledTextViewTopicProducer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Producer" />

        <io.geeny.sample.ui.common.views.LabeledTextView
            android:id="@+id/labeledTextViewTopicJournal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="TopicJournalType" />

    </LinearLayout>
</io.geeny.sample.ui.main.routing.router.list.RouteView>